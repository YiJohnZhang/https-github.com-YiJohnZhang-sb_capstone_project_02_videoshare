{
	"_comment": "it is business logic that checks whether or not the 'share' properties add up to <1.00",
	"$schema": "http://json-schema.org/draft-04/schema#",
	"type": "object",
	"properties": {
		"id": {
			"type": "integer"
		},
		"title": {
			"type": "string", "minLength": 4, "maxLength": 64
		},
		"summary": {
			"type": "string", "maxLength": 512
		},
		"description": {
			"type": "string", "maxLength": 1024
		},
		"link": {
			"type": "integer", "maximum": 128
		},
		"status": {
			"type": "string", "enum": ["open", "standby", "active", "legacy"]
		},
		"owner": {
			"type": "string", "minLength": 4, "maxLength": 32
		},
		"contractType": {
			"type": "string", "enum": ["single", "byview", "presplit"]
		},
		"contractDetails": {
			"type": "object",
			"properties": {
				"views": {
					"type": "array",
					"items": [{
						"type": "object",
						"properties": {
							"username": {"type": "string"},
							"share": {"type": "number"}
						},
						"required": ["username", "share"]
					}]
				},
				"engagement": {
					"type": "array",
					"items": [{
						"type": "object",
						"properties": {
							"username": {"type": "string"},
							"share": {"type": "number"}
						},
						"required": ["username", "share"]
					}]
				}
			},
			"required": ["views", "engagement"]
		},
		"contractSigned": {
			"type": "array",
			"items": [{
				"type": "object",
				"properties": {
					"username": {"type": "string"},
					"signed": {"type": "boolean"}
				},
				"required": ["username", "signed"]
			}]
		}
	},
	"required": [
		"id",
		"title",
		"summary",
		"description",
		"link",
		"owner",
		"contractType",
		"contractDetails",
		"contractSigned"
	]
}