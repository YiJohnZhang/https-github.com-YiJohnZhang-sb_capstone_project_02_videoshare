{
	"_comment": "it is business logic that checks whether or not the 'share' properties add up to <1.00 (both in front-end and back-end); if it is multiple-user do a front-end and back-end validation that each participant is present in the contractDetails object entries",
	"$schema": "http://json-schema.org/draft-04/schema#",
	"type": "object",
	"properties": {
		"title": {
			"type": "string", "minLength": 4, "maxLength": 64
		},
		"summary": {
			"type": "string", "maxLength": 512
		},
		"description": {
			"type": "string", "maxLength": 1024
		},
		"link": {
			"type": "integer", "maximum": 128
		},
		"owner": {
			"type": "string", "minLength": 4, "maxLength": 32
		},
		"contractType": {
			"type": "string", "enum": ["single", "byview", "presplit"]
		},
		"participants": {
			"type": "array",
			"items": [{
					"type": "string", "minLength": 4, "maxLength": 32
			}]
		},
		"contractDetails": {
			"type": "object",
			"properties": {
				"views": {
					"type": "array",
					"items": [{
						"type": "object",
						"properties": {
							"username": {"type": "string", "minLength": 4, "maxLength": 32},
							"share": {"type": "number"}
						},
						"required": ["username", "share"]
					}]
				},
				"engagement": {
					"type": "array",
					"items": [{
						"type": "object",
						"properties": {
							"username": {"type": "string", "minLength": 4, "maxLength": 32},
							"share": {"type": "number"}
						},
						"required": ["username", "share"]
					}]
				}
			},
			"required": ["views", "engagement"]
		},
		"contractSigned": {
			"type": "array",
			"items": [{
					"type": "string", "minLength": 4, "maxLength": 32
			}]
		}
	},
	"additionalProperties": false,
	"required": [
		"title",
		"summary",
		"description",
		"owner",
		"contractType",
		"participants",
		"contractDetails",
		"contractSigned"
	],
	"$defs": {
		"contractArray": {
			"type": "array",
			"items": [{
				"type": "string", "minLength": 4, "maxLength": 32
			}],
			"uniqueItems":true
		},
		"contractArrayOfObjects": {
			"type": "array",
			"items": [{
				"type": "object",
				"properties": {
					"username": {"type": "string", "minLength": 4, "maxLength": 32},
					"share": {"type": "number"}
				},
				"required": ["username", "share"]
			}]
		}

	}
}